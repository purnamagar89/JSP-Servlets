<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>FormData</display-name>
  <servlet>
    <servlet-name>FormHello</servlet-name>
    <servlet-class>com.company.servlet.FormDataServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FormHello</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>HeaderServlet</servlet-name>
    <servlet-class>com.company.servlet.header.DisplayHeader</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HeaderServlet</servlet-name>
    <url-pattern>/displayHeader</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>RefreshServlet</servlet-name>
    <servlet-class>com.company.servlet.refresh.RefreshServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RefreshServlet</servlet-name>
    <url-pattern>/refresh</url-pattern>
  </servlet-mapping>
</web-app>